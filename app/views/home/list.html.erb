<div class="container" style="margin-top: 100px;">
    <h1>게시판 글 리스트</h1><br>
    <a class="btn btn-secondary" href="/home/create" role="button">글쓰러가기</a><hr>
    <table class="table">
        <thead>
    <tr>
      <th>#</th>
      <th>제목</th>
      <th>내용</th>
      <th>수정/삭제</th>
    </tr>
  </thead>
        <tbody>
    <% @every_post.each do |p| %>
    <tr>
        <th><%= p.id %><br></th>
        <th><a href="/home/read/<%= p.id %>"><%= p.title %></a></th>
        <th><%= p.content %></th>
        <th><a class="btn btn-secondary" href="/home/update/<%= p.id %>">수정</a>
        <a class="btn btn-secondary" href="/home/destroy/<%= p.id %>">삭제</a></th>
    
    <% end %>
     </tr>
  </tbody>
</div>

